{
  "name": "begin-project",
  "version": "0.1.0",
  "description": "Tools for all Beg.in projects",
  "engines": {
    "node": ">=7.6"
  },
  "main": "base.js",
  "bin": {
    "cz": "./cz.js"
  },
  "scripts": {
    "// REFERENCE SCRIPT b": "CONTEXT=$(pwd) npm explore begin-project -- npm run",
    "b": "CONTEXT=$(pwd) npm run",
    "lint": "eslint --ignore-path $CONTEXT/.gitignore --format=node_modules/eslint-formatter-pretty $CONTEXT",
    "lint:pug": "pug-lint --reporter node_modules/puglint-stylish $CONTEXT/src/",
    "changelog": "cd $CONTEXT; conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "docs": "cd $CONTEXT; jsdoc2md --template docs.hbs --files *.js > README.md",
    "test:watch": "cd $CONTEXT; ava -w test.js */test.js src/**/test.js",
    "test:tap": "cd $CONTEXT; ava --tap test.js */test.js src/**/test.js",
    "cz": "./cz.js"
  },
  "repository": "Beg-in/project",
  "author": {
    "name": "Beg.in",
    "email": "info@beg.in",
    "url": "http://beg.in"
  },
  "contributors": [
    "Brian Jesse <brian.jesse@gmail.com> (brianjesse.com)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Beg-in/project/issues"
  },
  "homepage": "https://github.com/Beg-in/project#readme",
  "dependencies": {
    "ava": "^0.22.0",
    "commitizen": "2.9.6",
    "conventional-changelog-cli": "^1.3.4",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-import": "^2.7.0",
    "jsdoc-to-markdown": "3.0.0",
    "pug-lint": "^2.5.0",
    "pug-lint-config-clock": "2.0.0",
    "puglint-stylish": "0.1.1"
  }
}
